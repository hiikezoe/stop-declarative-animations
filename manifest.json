{
  "manifest_version": 2,
  "name": "StopDeclarativeAnimations",
  "version": "1.0",
  "description": "Stop all CSS animatons and transitions",
  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "watch-active.svg"
  }
}
